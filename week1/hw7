#include <bits/stdc++.h>
using namespace std;

int main() {
    int a;
    cin >> a;
    double duong =0;
    double am = 0;
    double khong =0;
    int A[a];
    for ( int i=0; i<a; i++)
    {
        cin >> A[i];
        if ( A[i] > 0 ) duong +=1;
        else if ( A[i] < 0 ) am += 1;
        else khong += 1;
    }
    cout << fixed << setprecision(6) << duong/a << endl;
    cout << fixed << setprecision(6) << am/a << endl;
    cout << fixed << setprecision(6) << khong/a;
    return 0;
}
